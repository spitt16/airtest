{% set contentClass="col-sm-12" %}
{% if(band.getSidebar()|length > 0)  %}
  {% set contentClass="col-sm-8 col-md-9 " %}
{% endif %}
<div class="{{ contentClass }} basic-content">
{% for index, content in band.getContent() %}
  <div id="{{ content.getAnchorId() }}" class="col-xs-12 strip-padding">
  {% set contentBodyClass="col-sm-12" %}
  {% if(content.getSidebar()|length > 0)  %}
    {% set contentBodyClass="col-sm-8" %}
  {% endif %}
  <div class="col-xs-12">
    {% if content.getName()|length > 0 %}
    <h2 class="strip-margin ">{{ content.getName() }}</h2>
    {% endif %}
  </div>
  <div class="{{ contentBodyClass }}">
    <p>{{ content.getBody() | raw }}</p>
  </div>
  {% if(content.getSidebar()|length > 0)  %}
    <div class="col-sm-4 basic-sidebar">
      {% for current_sidebar in content.getSidebar() %}
        {% include 'template-sidebar.html.twig' %}
      {% endfor %}
    </div>
  {% endif %}
  {% if content.hasBackToTop() %}
    <div class="col-xs-12 content-back-to-top-container">
        <a href="#" class="content-back-to-top hidden-xs ">
          <p class="pull-right">
            <span class="back-to-top-text">Back to top</span>
            <span class="fa fa-chevron-circle-up pull-right"></span></p>
        </a>
    </div>
  {% endif %}
  {#{% if index < (band.getContent()|length)-1 %}#}
    <div class="col-xs-12 strip-padding">
      <hr class="content-hr strip-margin"/>
    </div>
  {#{% endif %}#}
  </div>
{% endfor %}
</div>

{% if(band.getSidebar()|length > 0)  %}
  <div class="col-sm-4 col-md-3 basic-sidebar">
    {% for current_sidebar in band.getSidebar() %}
      {% include 'template-sidebar.html.twig' %}
    {% endfor %}
  </div>
{% endif %}
