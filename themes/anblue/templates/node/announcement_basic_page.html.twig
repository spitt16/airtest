<div class="container inner-card-style">
  <div class="row">
      <div class="col-xs-12">
        <h1 class="article-title">
          {{ announcement.getAnnouncementName() }}
        </h1>
        {%  if announcement.getDate()|length > 0 %}
        <h4 class="article-date">
          {{ announcement.getDate() }}
        </h4>
        {% endif %}
      </div>
      <div class="col-xs-12">
        <P>{{ announcement.getBody() | raw }}</P>
      </div>
  </div>
</div>
